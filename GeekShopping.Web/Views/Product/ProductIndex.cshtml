@model IEnumerable<GeekShopping.Web.Models.ProductViewModel>

<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">
				Products Lists
			</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="ProductCreate" class="btn btn-outline-primary">
				<i class="fas fa-plus"></i>Create New Product
			</a>
		</div>
	</div>
	<table class="table">
		<thread>
			<tr>
				<th>
					Name
				</th>
				<th>
					Category
				</th>
				<th>
					Price
				</th>
				<th>
					Options
				</th>
			</tr>
		</thread>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
				<td>
					@item.Name
				</td>
				<td>
					@item.CategoryName
				</td>
				<td>
					@item.Price
				</td>
				<td>
					<a asp-action="ProductUpdate" class="btn btn-sm btn-success" asp-route-id="@item.Id">
						<i class="fas fa-edit"></i>
					</a>
					@if(User.IsInRole("Admin"))
					{
						<a asp-action="ProductDelete" class="btn btn-sm btn-success" asp-route-id="@item.Id">
							<i class="fas fa-trash"></i>
						</a>
					}
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>